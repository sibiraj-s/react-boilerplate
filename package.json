{
  "name": "react-boilerplate",
  "version": "0.0.0-boilerplate-template",
  "description": "Minimal React Webpack Boilerplate",
  "private": true,
  "repository": "https://github.com/sibiraj-s/react-boilerplate",
  "author": "sibiraj-s",
  "license": "MIT",
  "keywords": [
    "react",
    "webpack",
    "tailwindcss",
    "react-boilerplate"
  ],
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore",
    "dev": "webpack serve",
    "build": "NODE_ENV=production webpack",
    "build:pages": "NODE_ENV=gh-pages webpack",
    "publish:docs": "npm run build:pages && node scripts/gh-pages.js",
    "test": "NODE_ENV=test jest",
    "updateSnapshot": "NODE_ENV=test jest --updateSnapshot",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "core-js": "^3.16.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "regenerator-runtime": "^0.13.9",
    "tailwindcss": "^2.2.7"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "autoprefixer": "^10.3.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "eslint": "^7.31.0",
    "eslint-config-pegasus": "^2.1.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "mini-css-extract-plugin": "^2.1.0",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.3.2",
    "prompts": "^2.4.1",
    "sass": "^1.36.0",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "webpack": "^5.47.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  }
}
